<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="nbeloglazov.geekalarm.android"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT">

    <uses-permission
        android:name="android.permission.INTERNET" />
    <uses-sdk
        android:minSdkVersion="8" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="nbeloglazov.geekalarm.android.Application">
        <activity
            android:name=".activities.AlarmsActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TaskActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name=".activities.SetUpAlarmActivity"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>

